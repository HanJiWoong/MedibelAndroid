<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IBMainTopLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_main_top_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.277777778"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="h,1000:316"
        app:layout_constraintHorizontal_bias="0.076923077"
        app:layout_constraintVertical_bias="0.489130435"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IBMainTopBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_common_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IBMainTopConnectState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_main_top_device_disconnected"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="w,4:5"
        app:layout_constraintHorizontal_bias="0.6875" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IBMainTopBatteryState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_main_top_battery_low"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/IBMainTopConnectState"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,4:5" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IBMainTopMyPage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_main_top_my_page"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/IBMainTopBatteryState"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,4:5" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>