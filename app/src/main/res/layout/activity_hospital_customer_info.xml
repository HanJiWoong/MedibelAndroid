<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CustomerInfo.HospitalCustomerInfoActivity">

    <com.exs.medivelskinmeasure.common.custom_ui.CommonTitleBar
        android:id="@+id/ViewHospitalCustomerInfoTitleBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,36:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLHospitalCustomerInfoContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoTitleBar">

        <ScrollView
            android:id="@+id/SVHospitalCustomerInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CLHospitalCustomerInfoScrollContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/TVHospitalCustomerInfoDesc"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="17.5dp"
                    android:text="@string/str_ko_hospital_customer_info_desc"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textSize="14sp"
                    android:textColor="#4a545a"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.9166666667"
                    app:layout_constraintDimensionRatio="h,330:36" />

                <com.exs.medivelskinmeasure.common.custom_ui.CustomInputView
                    android:id="@+id/ViewHospitalCustomerInfoNumber"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TVHospitalCustomerInfoDesc"
                    app:layout_constraintDimensionRatio="h,33:5"
                    app:layout_constraintWidth_percent="0.9166666667" />

                <com.exs.medivelskinmeasure.common.custom_ui.CommonDropDownBarView
                    android:id="@+id/ViewHospitalCustomerInfoBirthYear"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoNumber"
                    app:layout_constraintDimensionRatio="h,33:5"
                    app:layout_constraintWidth_percent="0.9166666667" />

                <com.exs.medivelskinmeasure.common.custom_ui.CommonDropDownBarView
                    android:id="@+id/ViewHospitalCustomerInfoGender"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoBirthYear"
                    app:layout_constraintDimensionRatio="h,33:5"
                    app:layout_constraintWidth_percent="0.9166666667" />

                <com.exs.medivelskinmeasure.common.custom_ui.CommonDropDownBarView
                    android:id="@+id/ViewHospitalCustomerInfoRegion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoGender"
                    app:layout_constraintDimensionRatio="h,33:5"
                    app:layout_constraintWidth_percent="0.9166666667" />

                <com.exs.medivelskinmeasure.common.custom_ui.CommonDropDownBarView
                    android:id="@+id/ViewHospitalCustomerInfoDetailRegion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoRegion"
                    app:layout_constraintDimensionRatio="h,33:5"
                    app:layout_constraintWidth_percent="0.9166666667" />

                <ImageView
                    android:id="@+id/IVHospitalCustomerInfoRegion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/img_face_region"
                    app:layout_constraintTop_toBottomOf="@id/ViewHospitalCustomerInfoDetailRegion"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintWidth_percent="0.9166666667"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnHospitalCustomerInfoAnalysisResult"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_common_round_button"
                    android:enabled="true"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="@string/str_ko_measure_result"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintDimensionRatio="h, 33:5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/IVHospitalCustomerInfoRegion"
                    app:layout_constraintWidth_percent="0.9166666667"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>