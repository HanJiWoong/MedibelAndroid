<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TVCustonInputTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="고객번호"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="14sp"
        android:textColor="@color/text_1"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.212121212"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLCustomInputContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_common_edit_text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TVCustonInputTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ETCustomInputContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="@string/str_ko_join_info_name_hint"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textColor="@color/text_1"
            android:textColorHint="#D7D7D7"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>